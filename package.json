{
	"name": "codekasten",
	"displayName": "Codekasten for VSCode",
	"description": "Personal knowledge management tool for markdown files",
	"author": {
		"name": "Jonas Schatz"
	},
	"repository": {
		"url": "https://github.com/JonasSchatz/codekasten", 
		"type": "git"
	},
	"version": "0.1.0",
	"license": "MIT",
	"publisher": "jonasschatz",
	"engines": {
		"vscode": "^1.51.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "codekasten",
					"title": "Codekasten",
					"icon": "static/codekasten_logo.svg"
				}
			]
		}, 
		"views": {
			"codekasten": [
				{
					"id": "backlinks",
					"name": "backlinks",
					"icon": "static/codekasten_logo.svg", 
					"contextualTitle": "Codekasten"
				}, {
					"id": "tagTree", 
					"name": "tagTree", 
					"icon": "static/codekasten_logo.svg", 
					"contextualTitle": "Codekasten"
				}
			]
		}, 
		"commands": [
			{
				"command": "codekasten.create-note",
				"title": "Codekasten: Create Note"
			},
			{
				"command": "codekasten.show-graph",
				"title": "Codekasten: Show graph"
			},
			{
				"command": "codekasten.search-note",
				"title": "Codekasten: Search Note"
			},
			{
				"command": "codekasten.refresh-graph",
				"title": "Codekasten: Refresh Graph"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"unittest": "mocha",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"devDependencies": {
		"@types/chai": "^4.2.14",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.51.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"chai": "^4.2.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^8.0.11",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"dependencies": {
		"@types/graphlib": "^2.1.7",
		"@types/md5": "^2.2.1",
		"graphlib": "^2.1.8",
		"md5": "^2.3.0"
	}
}
